                <materialDesign:Card x:Name="Card_1_Copy2" Padding="8" Margin="43,280,0,0" HorizontalAlignment="Left" Width="141" Height="194" VerticalAlignment="Top" materialDesign:ShadowAssist.ShadowDepth="Depth5">
                    <Grid>
                        <TextBlock Height="174" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="121" Margin="0,0,1,0"><Run Text="                       "/><InlineUIContainer>
                                <Button
