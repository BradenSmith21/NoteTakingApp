                                </Button>
                            </InlineUIContainer><LineBreak/><LineBreak/><Run FontSize="36" Text=" Note 4"/><LineBreak/><LineBreak/><LineBreak/><Run Text="  "/><InlineUIContainer>
                                <Button
                                    Width="107" VerticalAlignment="Center" Style="{DynamicResource MaterialDesignFlatMidBgButton}" x:Name="openNote6" Height="32" HorizontalAlignment="Center" Content="Open Note" Click="openNote6_Click"/>
                            </InlineUIContainer><LineBreak/><Run Text="  "/><LineBreak/><Run/></TextBlock>
                        <Button Style="{DynamicResource MaterialDesignFlatMidBgButton}" x:Name="openNote7" Content="Open Note" Margin="53,178,554,0"/>
                    </Grid>
                </materialDesign:Card>
                <materialDesign:Card x:Name="Card_1_Copy3" Padding="8" Margin="286,280,0,0" HorizontalAlignment="Left" Width="141" Height="194" VerticalAlignment="Top" materialDesign:ShadowAssist.ShadowDepth="Depth5">
                    <Grid>
                        <TextBlock Height="174" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="121" Margin="0,0,1,0"><Run Text="                       "/><InlineUIContainer>
                                <Button
                                    Width="37" Padding="8" x:Name="deleteNote4" Height="35" Click="deleteNote4_Click">
                                    <materialDesign:PackIcon
                                        Kind="TrashCan"/>
                                </Button>
                            </InlineUIContainer><LineBreak/><LineBreak/><Run FontSize="36" Text=" Note 5"/><LineBreak/><LineBreak/><LineBreak/><Run Text="  "/><InlineUIContainer>
