                    </Grid>
                </materialDesign:Card>
                <materialDesign:Card x:Name="Card_1_Copy4" Padding="8" Margin="522,280,0,0" HorizontalAlignment="Left" Width="141" Height="194" VerticalAlignment="Top" materialDesign:ShadowAssist.ShadowDepth="Depth5">
                    <Grid>
                        <TextBlock Height="174" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="121" Margin="0,0,1,0"><Run Text="                       "/><InlineUIContainer>
                                <Button
                                    Width="37" Padding="8" x:Name="deleteNote5" Height="35" Click="deleteNote5_Click">
                                    <materialDesign:PackIcon
                                        Kind="TrashCan"/>
                                </Button>
                            </InlineUIContainer><LineBreak/><LineBreak/><Run FontSize="36" Text=" Note 6"/><LineBreak/><LineBreak/><LineBreak/><Run Text="  "/><InlineUIContainer>
                                <Button
